<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:gravity="center"
	android:background="#e0e0e0"
	android:orientation="vertical">

	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<LinearLayout
			android:id="@+id/linearLayoutData"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<ImageView
				android:src="@drawable/enter"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>

			<TextView
				android:visibility="gone"
				android:id="@+id/textViewError"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#E0453B"
				android:layout_width="wrap_content"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<EditText
					android:hint="@string/login"
					android:layout_height="wrap_content"
					android:ems="10"
					android:id="@+id/editTextLogin"
					android:layout_width="wrap_content"/>

				<EditText
					android:hint="@string/parol"
					android:layout_height="wrap_content"
					android:ems="10"
					android:inputType="textPassword"
					android:layout_width="wrap_content"
					android:id="@+id/editTextParol"/>

				<CheckBox
					android:paddingBottom="5dp"
					android:paddingTop="5dp"
					android:id="@+id/checkBoxPrivacy"
					android:text="Скрытно"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"/>

				<Button
					android:id="@+id/buttonData"
					android:layout_height="wrap_content"
					android:text="@string/hello_world"
					android:layout_width="match_parent"/>

				<TextView
					android:id="@+id/textViewHelp"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:paddingBottom="5dp"
					android:paddingTop="5dp"
					android:background="@drawable/tap_button"
					android:layout_height="wrap_content"
					android:text="Забыли пароль?"
					android:textSize="16dp"
					android:visibility="gone"
					android:layout_width="wrap_content"/>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

	<ProgressBar
		android:visibility="gone"
		android:id="@+id/progressBarData"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>

</LinearLayout>

